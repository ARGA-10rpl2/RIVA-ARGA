<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Nomor Ponsel atau email"
        android:textColor="#000000" />

    <EditText

        android:id="@+id/ET1"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:hint="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Kata sandi"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/ET2"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:hint="*********" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/kurang"
            android:layout_width="410dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#0062ff"
            android:text="Login" />
    </LinearLayout>

    <TextView
        android:textColor="#140994"
        android:layout_gravity="left"
        android:id="@+id/TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa kata sandi anda?"
        android:textSize="15dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#e9f0ea"
        >

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="531dp"
            android:orientation="vertical">


            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="---------------------------------------- atau ---------------------------------------" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahasa Jawa"
                android:textColor="#140994" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <Button
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#1acf17"
                android:text="Buat Akun Baru" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English (US)"
                android:textColor="#140994"
                android:textSize="12dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahasa Lainnya..."
                android:textColor="#140994"
                android:textSize="12dp"></EditText>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
